# ステージング環境用の環境変数設定テンプレート
# このファイルを.env.stagingにコピーして、値を設定してください

# Django設定
SECRET_KEY=your-staging-secret-key-here
DEBUG=False
DJANGO_ENV=staging
ALLOWED_HOSTS=stg.tableno.jp

# データベース設定（Phase1: MySQL）
DB_ENGINE=mysql
DB_NAME=tableno_stg
DB_USER=tableno_user
DB_PASSWORD=your-database-password
DB_ROOT_PASSWORD=your-root-password
DB_HOST=db
DB_PORT=3306

# Redis設定（キャッシュ用）
REDIS_URL=redis://redis:6379/1

# ログ設定
LOG_DIR=/var/log/tableno

# メール設定
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-email-password
DEFAULT_FROM_EMAIL=noreply@tableno.jp
ADMIN_EMAIL=admin@tableno.jp

# OAuth設定
GOOGLE_OAUTH_CLIENT_ID=your-google-client-id
GOOGLE_OAUTH_CLIENT_SECRET=your-google-client-secret
# Twitter/X OAuth2
TWITTER_CLIENT_ID=your-twitter-client-id
TWITTER_CLIENT_SECRET=your-twitter-client-secret
TWITTER_REDIRECT_URI=https://stg.tableno.jp/accounts/twitter_oauth2/login/callback/

# CORS/CSRF設定
CORS_ALLOWED_ORIGINS=https://stg.tableno.jp
CSRF_TRUSTED_ORIGINS=https://stg.tableno.jp

# Sentry設定（オプション）
# SENTRY_DSN=your-sentry-dsn

# サイトURL
SITE_URL=https://stg.tableno.jp
